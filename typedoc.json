{
  "$schema": "https://typedoc.org/schema.json",
  "entryPoints": ["src/index.ts"], // Start from the main entry point
  "out": "docs/api", // Output directory for Markdown files
  "plugin": ["typedoc-plugin-markdown"], // Use the Markdown plugin
  "readme": "none", // Don't generate a separate README in the output
  "githubPages": false, // We are using VitePress, not GitHub Pages directly for TypeDoc output
  "entryPointStrategy": "expand", // Create separate files for modules/exports
  "includeVersion": true, // Include version in the output
  "name": "xdash API Reference", // Title for the documentation
  "hideGenerator": true, // Don't show "Generated by TypeDoc"
  "cleanOutputDir": true, // Clean the output directory before generating
  // "publicPath": "/xdash/api/", // Removed to attempt relative link generation
  // Markdown Plugin Options (adjust as needed)
  "outputFileStrategy": "members", // Try generating file per member
  "flattenOutputFiles": true, // Put all generated files directly in docs/api
  "entryFileName": "index.md" // Name for the main API index file
}